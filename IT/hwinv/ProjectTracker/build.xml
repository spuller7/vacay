<project name="ProjectTracking" default="all" basedir=".">
  <target name="all">
    <exec executable="svnversion" outputproperty="svnversion" />
    <echo file="./html/docroot/build.info" append="false">2.0.${svnversion}</echo>    
    <move file="./html/config.php" tofile="./html/config.sample.php" />
    <tar compression="gzip" destfile="ProjectTracking-r${svnversion}.tar.gz">
      <tarfileset dir="./html" prefix="public_html">
        <include name="**" />
      </tarfileset>
    </tar>
  </target>
</project>
